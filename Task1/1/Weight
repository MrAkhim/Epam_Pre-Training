package by.epam.preTraining.task1.model;

public class Weight {
	
	private static final int GRAM_PER_KILOGRAM = 1000;
	private static final int GRAM_PER_TONNE = 1_000_000;

	public static double convertGrtoKg(int gram) {
		double kilogram;
		return kilogram = gram / GRAM_PER_KILOGRAM;
	}

	public static double convertGrtoTon(int gram) {
		double ton;
		return ton = gram / GRAM_PER_TONNE;
	}
}
